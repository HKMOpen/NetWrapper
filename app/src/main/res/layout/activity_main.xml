<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hss01248.netdemo.MainActivity">



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get String"
        android:id="@+id/get_string"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post String"
        android:id="@+id/post_string"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get json"
        android:id="@+id/get_json"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post json"
        android:id="@+id/post_json"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get standard json"
        android:id="@+id/get_standard_json"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post standard json"
        android:id="@+id/post_standard_json"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="download"
        android:id="@+id/download"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="upload"
        android:id="@+id/upload"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post by json"
        android:id="@+id/postbyjson"/>
</LinearLayout>
